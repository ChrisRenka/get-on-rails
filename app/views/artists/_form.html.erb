<div class="card mb-3">
  <%= form_with(model: @artist, local: true) do |form| %>
    <div class="card-body">
      <div class="row">
        <div class="col-12">
          <% if @artist.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@artist.errors.count, "error") %> prohibited
                this artist from being saved:
              </h2>
              <ul>
                <% @artist.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <label for="name" class="control-label custom-control-label">Name</label>
            <div class="input-group">
              <span class="input-group-addon"><i class="fas fa-compact-disc" aria-hidden="true"></i></span>
              <input type="text" class="form-control" id="artist-name" name="artist[name]" value="<%= @artist.name %>">
            </div>
          </div>
          <div class="form-group">
            <label for="profile" class="control-label custom-control-label">Description</label>
            <div class="input-group">
              <span class="input-group-addon"><i class="fas fa-compact-disc" aria-hidden="true"></i></span>
              <input type="text" class="form-control" id="artist-profile" name="artist[profile]" value="<%= @artist.profile %>">
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Save</button>
      </div>
    </div>
  <% end %>
</div>

