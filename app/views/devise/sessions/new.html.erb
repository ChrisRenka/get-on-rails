<div class="container">
  <div class="card card-login mx-auto mt-5">
    <div class="card-header">Login</div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <div>
            <div class="input-group">
              <span class="input-group-addon"><i class="fas fa-envelope" aria-hidden="true"></i></span>
              <input autofocus="autofocus" autocomplete="email" type="email" value="" name="user[email]" id="user_email" class="form-control">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div>
            <div class="input-group">
              <span class="input-group-addon calendar"><i class="fas fa-key" aria-hidden="true"></i></span>
              <input autocomplete="current-password" type="password" name="user[password]" id="user_password" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-12">
          <input type="submit" class="btn btn-primary btn-lg btn-block login-button" name="commit" id="submit" value="Entrar" data-disable-with="Entrar">
        </div>
      <% end %>
      <div class="row">
        <div class="col-12">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
